<div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
<div class="container">
  <h1 class="mt-3">Find beautiful cats around you</h1>

  <p class="mb-5" style="opacity: 0.5"></p>


  <div class="row">
    <% @cats.each do |cat| %>
      <div class="col-sm-12 col-md-8 col-lg-6 card-link">
        <%= link_to cat_path(cat) do %>
        <div class="card-trip mb-4">
          <%= cl_image_tag cat.photo %>
            <div class="card-trip-infos d-flex flex-column">
              <div class="w-100">
                  <h2><%= cat.name %>
                  <% if cat.gender == 'Male' %>
                    <i class="fas fa-mars"></i>
                  <% else %>
                    <i class="fas fa-venus"></i>
                  <% end %></h2>
                <p><%= cat.address %> - <%= cat.age %> years old</p>
              </div>
              <div class="d-flex justify-content-between align-items-end mt-2 w-100">
                <%= cat.description %>
                <h3 class="card-trip-pricing"><%= cat.price_per_day %>â‚¬</h3>
              </div>
            </div>
        </div>
      </div>
      <% end %>
    <% end %>

  </div>
</div>
