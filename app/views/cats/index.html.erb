<div class="container">
  <h1>Find the cats around you</h1>
  <div class="row">
    <div class="col">

      <% @cats.each do |cat| %>
        <div class="card-trip mb-2">
            <%= link_to cat_path(cat) do %>
              <%= cl_image_tag cat.photo %>
            <% end %>
            <div class="card-trip-infos">

              <div>
                <h2><%= cat.name %></h2>
                <p>
                  <%= cat.address %> - <%= cat.age %> years old<hr>
                  <%= cat.description %>
                </p>
              </div>

              <h2 class="card-trip-pricing"><%= cat.price_per_day %>â‚¬</h2>
            </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
