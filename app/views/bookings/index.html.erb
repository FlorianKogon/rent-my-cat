<div class="container">
  <h2 class="mt-4">Your bookings:</h2>
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-sm-12 col-md-8 col-lg-6 card-link">
        <%= link_to booking_path(booking) do %>
        <div class="card-trip mb-4">
          <%= cl_image_tag booking.cat.photo %>
          <div class="card-trip-infos d-flex flex-column">
            <div class="w-100">
              <h2><%= booking.cat.name %>
              <% if booking.cat.gender == 'Male' %>
                <i class="fas fa-mars"></i>
                <% else %>
                <i class="fas fa-venus"></i>
              <% end %><small>(<%= booking.status %>)</small></h2>
              <p><%= booking.cat.address %> - <%= booking.cat.age %> years old</p>
            </div>
            <div class="d-flex justify-content-between align-items-end mt-2 w-100">
            <%= booking.starting_date %> to <%= booking.ending_date %>
            <h3 class="card-trip-pricing">Total: <%= booking.total_price %>€</h3>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

