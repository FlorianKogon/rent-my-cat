<div class="container">
  <%= simple_form_for(@user) do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :age %>
    <%= f.input :address %>
    <%= f.input :photo %>
    <%= f.input :photo_change, as: :hidden %>
    <%= f.submit "Edit", class: "btn btn-outline-dark px-5" %>
  <%= link_to "Back", user_path(@user), class: "btn btn-dark" %>
  <% end %>
</div>
