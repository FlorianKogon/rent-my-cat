<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <div class="d-flex">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://cdn.iconscout.com/icon/premium/png-256-thumb/cat-455-896812.png", class: "avatar dropdown-toggle" %>
    <% end %>

    <%= simple_form_for :query, url: cats_path, method: "GET", :html => {:class => "form-inline"} do |f| %>
      <%= f.input :address, label: false, placeholder: 'Search for a city', input_html: { id: "flat_address" } %>
      <%= f.submit "Search", class: "btn btn-dark px-4" %>
    <% end %>

  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <ul class="inline">
          <li class="welcome">
            Welcome <strong><%= current_user.first_name.capitalize %></strong>
          </li>
           <li class="nav-item dropdown">
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "My profile", user_path(current_user), class: "dropdown-item" %> <hr class="m-1">
                <%= link_to "My bookings", bookings_path(@booking), class: "dropdown-item" %> <hr class="m-1">
                <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-danger d-flex justify-content-center mx-3 mt-1") %>
              </div>
           </li>
        </ul>
      <% else %>
          <%= link_to('Login', new_user_session_path, class: "btn btn-secondary px-4") %>
      <% end %>
  </div>
</div>
