<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "cat_logo.jpg", class: "avatar dropdown-toggle" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <ul class="inline">
          <li class="welcome">
            Welcome <strong><%= current_user.first_name.capitalize %></strong>
          </li>
           <li class="nav-item dropdown">
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "My profile", user_path(current_user), class: "dropdown-item" %> <hr class="m-1">
                <%= link_to "My bookings", bookings_path(@booking), class: "dropdown-item" %> <hr class="m-1">
                <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-danger d-flex justify-content-center mx-3 mt-1") %>
              </div>
           </li>
        </ul>
      <% else %>
          <%= link_to('Login', new_user_session_path, class: "btn btn-secondary px-4") %>
      <% end %>
  </div>
</div>
